<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/primerPlatFragment">


    <fragment
        android:id="@+id/primerPlatFragment"
        android:name="com.example.appprecafeteriaprova.PrimerPlatFragment"
        android:label="fragment_primer_plat"
        tools:layout="@layout/fragment_primer_plat" >
        <action
            android:id="@+id/action_primerPlatFragment_to_begudaFragment"
            app:destination="@id/begudaFragment" />
    </fragment>
    <fragment
        android:id="@+id/begudaFragment"
        android:name="com.example.appprecafeteriaprova.BegudaFragment"
        android:label="fragment_beguda"
        tools:layout="@layout/fragment_beguda" >
        <action
            android:id="@+id/action_begudaFragment_to_totalFragment"
            app:destination="@id/totalFragment" />
    </fragment>
    <fragment
        android:id="@+id/totalFragment"
        android:name="com.example.appprecafeteriaprova.TotalFragment"
        android:label="fragment_total"
        tools:layout="@layout/fragment_total" />
</navigation>